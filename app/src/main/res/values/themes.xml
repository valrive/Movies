<resources>

     <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Detail">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

    </style>

    <!-- Splash background -->
    <style name="SplashTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <!-- Error Text Appearance -->
    <style name="Error" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="fontFamily">@font/dhl_200</item>
    </style>

    <!-- TextInputLayout -->
    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/normal_stroke</item>
        <item name="android:textColorHint">@color/text_color</item>
        <item name="android:fontFamily">@font/dhl_200</item>
        <item name="errorTextAppearance">@style/Error</item>
    </style>

    <!-- Outlined button -->
    <style name="OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:minWidth">@dimen/button_width</item>
        <item name="strokeColor">@color/colorAccent</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:fontFamily">@font/dhl_400</item>
    </style>



</resources>
